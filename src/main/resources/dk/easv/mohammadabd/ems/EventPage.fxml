<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="dk.easv.mohammadabd.ems.GUI.Controller.EventPageController"
            prefHeight="600.0" prefWidth="800.0"
            fx:id="eventPage"
            stylesheets="/css/style.css"
            styleClass="root">


   <!-- Event Name -->
   <TextField fx:id="eventNameField"
              layoutX="120" layoutY="170"
              promptText="Event name"
              prefWidth="600"
              styleClass="input-field"/>

   <!-- Event Info -->
   <TextField fx:id="eventInfoField"
              layoutX="120" layoutY="220"
              promptText="Event info"
              prefWidth="600"
              styleClass="input-field"/>

   <!-- Event Description -->
   <TextArea fx:id="eventDescriptionField"
             layoutX="120" layoutY="270"
             prefWidth="600" prefHeight="100"
             promptText="Event description"
             wrapText="true"
             styleClass="input-field"/>

   <!-- Regular Ticket Area -->
   <TextArea fx:id="regularTicketField"
             layoutX="120" layoutY="380"
             prefWidth="280" prefHeight="80"
             promptText="Regular Ticket"
             wrapText="true"
             styleClass="ticket-area"/>

   <!-- VIP Ticket Area -->
   <TextArea fx:id="vipTicketField"
             layoutX="440" layoutY="380"
             prefWidth="280" prefHeight="80"
             promptText="VIP Ticket"
             wrapText="true"
             styleClass="ticket-area"/>

   <!-- Regular Button -->
   <Button fx:id="regularTicketButton"
           layoutX="200" layoutY="480"
           text="Buy Regular Ticket"
           prefWidth="160"
           styleClass="buy-button"/>

   <!-- VIP Button -->
   <Button fx:id="vipTicketButton"
           layoutX="440" layoutY="480"
           text="Buy VIP Ticket"
           prefWidth="160"
           styleClass="buy-button"/>

</AnchorPane>
