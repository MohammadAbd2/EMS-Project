<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>

<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="dk.easv.mohammadabd.ems.GUI.Controller.HelloController">

    <!-- Header with Image on Left and Navbar on Right -->
    <HBox fx:id="Header" alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #333;">

        <!-- Apply Padding Correctly -->
        <padding>
            <Insets right="10" />
        </padding>

        <!-- Logo on the Left -->
        <ImageView fx:id="logo" fitHeight="50" fitWidth="100" />

        <!-- Spacer to Push Navbar to the Right -->
        <Region HBox.hgrow="ALWAYS" />

        <!-- Navigation Bar (Buttons) -->
        <HBox fx:id="navbar" spacing="15" alignment="TOP_CENTER">
            <Button text="Home" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Ticket" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Coordinator" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Events" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <ImageView fx:id="profile_pic" fitHeight="65" fitWidth="74" />
        </HBox>
    </HBox>

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="10.0">
        <!-- Apply Padding Correctly -->
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <Label text="This is a test" />
    </VBox>

</VBox>
