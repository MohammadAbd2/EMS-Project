<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="loginPageContent" prefHeight="500" prefWidth="400" style="-fx-background-color: #0074d9; -fx-border-color: white;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dk.easv.mohammadabd.ems.GUI.Controller.LoginController">
    <VBox  alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="30" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.topAnchor="30">
        <ImageView fx:id="logo" fitHeight="60" fitWidth="120" />

        <Label prefHeight="26.0" prefWidth="337.6" style="-fx-text-fill: black; -fx-font-size: 18;" text="Username">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
        <TextField fx:id="username" maxWidth="337.6" prefHeight="25.6" prefWidth="337.6" promptText="admin" />

        <Label prefHeight="25.6" prefWidth="337.6" style="-fx-text-fill: black; -fx-font-size: 18;" text="Password" />
        <PasswordField fx:id="password" maxWidth="337.6" prefHeight="25.6" prefWidth="337.6" promptText="1234" />

        <Button fx:id="loginButton" maxWidth="200" prefHeight="30.0" prefWidth="200.0" styleClass="login-button" text="Log In" onAction="#loginButtonClicked" />
      <Region prefHeight="0.0" prefWidth="338.0" />

        <VBox alignment="CENTER" spacing="5">
            <Label prefHeight="19.0" prefWidth="353.0" style="-fx-text-fill: black; -fx-font-size: 13;" text="Contact us for help" />
            <Hyperlink prefHeight="24.0" prefWidth="361.0" style="-fx-text-fill: black;" text="+45 91 99 41 44" />
        </VBox>
    </VBox>
</AnchorPane>
